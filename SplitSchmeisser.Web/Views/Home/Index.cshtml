@model IEnumerable<GroupViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome, @User.Identity.Name</h1>
    <p>bla bla bbla some info</p>

    <a asp-action="Create" asp-controller="Group" style="text-decoration: none;">
        <img src="~/icons/edit.png" alt="Edit" width="20" height="20" title="Create a new group" /> Add expense
    </a>

    <div class="m-5">

        <table class="table float-left d-inline-block m-3 list-group w-25" title="I lent">
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Group" asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none;">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>

                        </td>
                        <td style="text-align: right;">
                            <a asp-controller="Group" asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: none;">
                                <img src="~/icons/edit.png" alt="Edit" width="20" height="20" />
                            </a>
                            <a asp-controller="Group" asp-action="Delete" asp-route-id="@item.Id" style="text-decoration: none;">
                                <img src="~/icons/garbage.png" alt="Remove" width="20" height="20" />
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

        <span>

            <ul class="float-right d-inline-block m-3 list-group w-25">
                <h4>I owe</h4>
                @foreach (var item in Model)
                {
                    <li class="list-group-item">
                        <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none;">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </li>
                }
            </ul>
        </span>
    </div>

</div>
