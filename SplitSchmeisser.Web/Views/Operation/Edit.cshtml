@model OperationEditModel
@{
    ViewData["Title"] = "Edit";
}

<div class="esh-orders">
    <div class="container">
        <div>
            <a asp-controller="Group" asp-action="Details" asp-route-id=@Model.GroupId class="content-heading text-muted text-decoration-none text-dark">
                <img src="~/icons/back.png" alt="Back to Group" width="20" height="20" /><span class="mt-2">Back To Group</span>
            </a>
        </div>

        <div class="paragraphs">
            <div class="row">
                <div class="span4">
                    <div class="mr-3 float-left">
                        <h1>Edit Operation</h1>
                    </div>
                </div>
            </div>
        </div>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="GroupId" />
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>