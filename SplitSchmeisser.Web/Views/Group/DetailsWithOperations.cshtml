@model IEnumerable<OperationViewModel>
@{
    ViewData["Title"] = Model.First().GroupName;
    ViewData["Id"] = Model.First().Group.Id;
}

<div class="esh-orders">
    <div class="container">
        @if (Model != null && Model.Any())
        {

            <div>
                <a asp-controller="Home" asp-action="Index" style="text-decoration: none; color: black;">
                    <img src="~/icons/back.png" alt="Back to List" width="20" height="20" /><span class="mt-2">Back To List</span>
                </a>
            </div>

            <div class="paragraphs">
                <div class="row">
                    <div class="span4">
                        <div class="mr-3 float-left">
                            <h1>@Html.DisplayFor(model => model.First().GroupName)</h1>
                        </div>
                        <a asp-controller="Group" asp-action="Edit" asp-route-id="@Model.First().GroupId" class="content-heading text-muted text-decoration-none">
                            <img src="~/icons/edit.png" alt="Edit" width="20" height="20" />
                        </a>
                    </div>
                </div>
            </div>

            @*<h1 class="d-inline">@ViewData["Title"]</h1>
                <form class="d-inline float-right">
                    <a asp-action="Create" asp-controller="Group" class="content-heading text-muted text-decoration-none">
                        <img src="~/icons/edit.png" alt="Edit" width="20" height="20" title="Create a new group" /> Add payment
                    </a>
                </form>*@


            <div class="container">
                <div class="row">
                    <div class="col-sm-9 m-2">

                        <table class="table mt-1">
                            <thead>
                                <tr>
                                    <td>
                                        <h4>List of the Operations</h4>
                                    </td>

                                    <td></td>
                                    <td></td>
                                    <td class="text-left">
                                        <a asp-action="Create" asp-controller="Operation" asp-route-id="@Model.First().GroupId" class="content-heading text-muted text-decoration-none">
                                            <img src="~/icons/pay.png" alt="Pay" width="20" height="20" title="Add payment" /> Add payment
                                        </a>

                                    </td>
                                    <td></td>
                                </tr>

                            </thead>
                            <thead>
                                <tr>
                                    <th>Owner</th>
                                    <th>Amount</th>
                                    <th>Date of Loan</th>
                                    <th>Description</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td scope="row">
                                            @Html.DisplayFor(modelItem => item.OwnerName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Amount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateOfLoan)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td style="text-align: right;">
                                            <a asp-controller="Operation" asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: none;">
                                                <img src="~/icons/edit.png" alt="Edit" width="20" height="20" />
                                            </a>
                                            <a asp-controller="Operation" asp-action="Delete" asp-route-id="@item.Id" style="text-decoration: none;">
                                                <img src="~/icons/garbage.png" alt="Remove" width="20" height="20" />
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="col-sm-2 m-2">
                        <table class="table mt-1 ml-5">
                            <thead>
                                <tr>
                                    <td>
                                        <h4>Users</h4>
                                    </td>
                                    <td></td>
                                </tr>
                            </thead>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Debt</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in @Model.First().Group.Debts)
                                {
                                    <tr>
                                        <td scope="row">
                                            @user.Key
                                        </td>
                                        <td>
                                            @user.Value
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        }
        else
        {
            <div style="margin-top:200px;" align="center">
                You do not participate in any of groups
            </div>
        }
    </div>
</div>
