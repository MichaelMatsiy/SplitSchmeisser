@model IEnumerable<GroupViewModel>
@{
    ViewData["Title"] = "My Groups";
}

<div class="esh-orders">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <h1>@ViewData["Title"]</h1>

            <article class="esh-orders-titles row">
                <section class="esh-orders-title col-xs-4">Group Name</section>
                <section class="esh-orders-title col-xs-2"></section>
            </article>

            @foreach (var item in Model)
            {
                <article class="esh-orders-items row">
                    <section class="esh-orders-item col-xs-2">@Html.DisplayFor(modelItem => item.GroupName)</section>
                </article>
            }
        }
        else
        {
            <div style="margin-top:200px;" align="center">
                You do not participate in any of groups
            </div>
        }
    </div>
        </div>
